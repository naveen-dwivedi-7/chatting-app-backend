<%- include('../partials/header') %>

<div class="container">
  <h1>Conversations List</h1>
  <a href="/conversations/create" class="btn btn-primary">‚ûï Add Conversation</a>
  
  <table class="table table-bordered mt-3">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Type</th>
        <th>Created By</th>
        <th>Actions</th>
      </tr>
    </thead>
     <tbody>
      <% if (conversations.length > 0) { %>
        <% conversations.forEach(conv => { %>
          <tr>
            <td><%= conv.id %></td>
            <td><%= conv.title %></td>
            <td>
              <% if (conv.type == 0) { %>
                1 to 1
              <% } else if (conv.type == 1) { %>
                Group
              <% } else { %>
                Unknown
              <% } %>
            </td>
           <td><%= conv.created_by_name %></td>

            <td>
              <a href="/conversations/<%= conv.id %>/edit" class="btn btn-sm btn-warning">‚úè Edit</a>
              <form action="/conversations/<%= conv.id %>/delete" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-sm btn-danger">üóë Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="5">No conversations found</td></tr>
      <% } %>
    </tbody>
  </table>

  <!-- Pagination -->
  <nav>
    <ul class="pagination">
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
          <a class="page-link" href="/conversations?page=<%= i %>"><%= i %></a>
        </li>
      <% } %>
    </ul>
  </nav>
</div>

<%- include('../partials/footer') %>
