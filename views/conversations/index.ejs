<%- include('../partials/header') %>

<div class="container mt-5">
  <h1>Conversations</h1>
  <a href="/conversations/create" class="btn btn-success mb-3">âž• Add Conversation</a>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Type</th>
        <th>Created By</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (conversations.length === 0) { %>
        <tr><td colspan="5" class="text-center">No conversations found.</td></tr>
      <% } %>

      <% conversations.forEach(conv => { %>
        <tr>
          <td><%= conv.id %></td>
          <td><%= conv.title %></td>
          <td><%= conv.displayType %></td>
          <td><%= conv.created_by_name %></td>
          <td>
            <a href="/conversations/<%= conv.id %>/edit" class="btn btn-primary btn-sm">Edit</a>
            <form action="/conversations/<%= conv.id %>/delete" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this conversation?');">
  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
</form>
           
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <% if (totalPages > 1) { %>
    <nav>
      <ul class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a class="page-link" href="/conversations?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } %>
</div>

<%- include('../partials/footer') %>
