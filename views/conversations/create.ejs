<%- include('../partials/header') %>

<div class="container">
  <h1>Add Conversation</h1>
  <form action="/conversations/create" method="POST">
    <div class="form-group">
      <label>Title</label>
      <input type="text" name="title" class="form-control" required />
    </div>

    <div class="form-group mt-2">
      <label>Type</label>
      <select name="type" class="form-control" required>
        <option value="1to1">1 to 1</option>
        <option value="group">Group</option>
      </select>
    </div>

    <div class="form-group mt-2">
      <label>Created By</label>
      <select name="created_by" class="form-control" required>
        <option value="">-- Select User --</option>
        <% users.forEach(user => { %>
          <option value="<%= user.id %>"><%= user.name %></option>
        <% }) %>
      </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">ðŸ’¾ Save</button>
    <a href="/conversations" class="btn btn-secondary mt-3">â¬… Back</a>
  </form>
</div>

