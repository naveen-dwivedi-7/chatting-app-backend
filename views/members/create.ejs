<%- include('../partials/header') %>

<div class="container mt-4">
  <h1>Add Conversation Member</h1>
  <form action="/members" method="POST" class="mt-3">
    <div class="mb-3">
      <label class="form-label">Conversation</label>
      <select name="conversation_id" class="form-select" required>
        <option value="">-- Select Conversation --</option>
        <% conversations.forEach(c => { %>
          <option value="<%= c.id %>"><%= c.title %></option>
        <% }) %>
      </select>
    </div>
    <div class="mb-3">
      <label class="form-label">User</label>
      <select name="user_id" class="form-select" required>
        <option value="">-- Select User --</option>
        <% users.forEach(u => { %>
          <option value="<%= u.id %>"><%= u.name %></option>
        <% }) %>
      </select>
    </div>
    <button type="submit" class="btn btn-success">ğŸ’¾ Save</button>
    <a href="/members" class="btn btn-secondary">â¬…ï¸ Back</a>
  </form>
</div>

