<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bootstrap EJS App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container">
      <a href="/" class="navbar-brand">Home</a>
      <a href="/users" class="navbar-brand">User</a>
      <a href="/conversations" class="navbar-brand">Conversations</a>
      <a href="/messages" class="navbar-brand">Messages</a>
      <a href="/members" class="navbar-brand">Members</a>

 

      <div>
        <a href="/api/auth/login" class="btn btn-outline-light">Login</a>
        <a href="/api/auth/register" class="btn btn-outline-light">Register</a>
        <button id="logoutBtn" class="btn btn-danger">Logout</button>

      </div>
    </div>
  </nav>
  <script src="../../public/js/auth.js"></script>

  <div class="container mt-4">
<script>
    // Check if token exists in localStorage
    const token = localStorage.getItem("token");

    const loginBtn = document.getElementById("loginBtn");
    const registerBtn = document.getElementById("registerBtn");
    const logoutBtn = document.getElementById("logoutBtn");

    if (token) {
      // User is logged in
      loginBtn.style.display = "none";
      registerBtn.style.display = "none";
      logoutBtn.style.display = "inline-block";
    }

    // Logout functionality
    logoutBtn.addEventListener("click", () => {
      localStorage.removeItem("token");
      window.location.href = "/api/auth/login"; // redirect to login page
    });
  </script>

